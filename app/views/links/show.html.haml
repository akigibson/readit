%p= link_to @link.title, @link.url

= form_for [@link, @comment] do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= pluralize(@comment.errors.count, "error") + "prohibited this idea from being saved:"

      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :message
    %br
    = f.text_area :message, :placeholder => "Add a comment"

  .actions= f.submit

%br
%h2 Comments:

%div
  - @link.comments.each do |comment|
    %p= comment.message

%br
= link_to "Return Home", pages_path

